rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Returned files - teachers can upload, students can read
    match /returned-files/{fileName} {
      // Teachers can upload returned files
      allow write: if request.auth != null && 
        exists(/databases/(default)/documents/profiles/$(request.auth.uid)) &&
        get(/databases/(default)/documents/profiles/$(request.auth.uid)).data.role == 'teacher';
      
      // Students can read returned files
      allow read: if request.auth != null && 
        exists(/databases/(default)/documents/profiles/$(request.auth.uid)) &&
        get(/databases/(default)/documents/profiles/$(request.auth.uid)).data.role == 'student';
    }
    
    // Assignment files - teachers can upload, students can read
    match /assignments/{teacherId}/{fileName} {
      // Teachers can upload assignment files
      allow write: if request.auth != null && 
        exists(/databases/(default)/documents/profiles/$(request.auth.uid)) &&
        get(/databases/(default)/documents/profiles/$(request.auth.uid)).data.role == 'teacher' &&
        request.auth.uid == teacherId;
      
      // Students can read assignment files
      allow read: if request.auth != null && 
        exists(/databases/(default)/documents/profiles/$(request.auth.uid)) &&
        get(/databases/(default)/documents/profiles/$(request.auth.uid)).data.role == 'student';
    }
  }
}
